#include <stdio.h>

int main()
{
    int peso;
    float altura;
    float imc=0;
    printf("ingrese el peso en kg:");
    scanf("%d",& peso);
    printf("ingrese la altura en metros:");
    scanf("%f",& altura);
    imc=peso/(altura*altura);
    if(imc<18.5){
        printf("su indice de masa corporal es:%f(peso bajo)\n",imc);
    }
        else if((imc>=18.5) &&(imc<=25.9)){
        printf("su indice de masa corporal es:%f(peso normal)\n",imc);
        }
        else if((imc>=25.0)&&(imc<=29.9)){
         printf("su indice de masa corporal es:%f(sobrepeso)\n",imc);
        }
         else if(imc>=30.0){
         printf("su indice de masa corporal es:%f(obesidad)\n",imc);
         }
         printf("tabla de referencia:\n imc<18.5 | Bajo peso\n 18.5 a 24.9 | Normal\n 25.0 a 29.9 | Sobrepeso\n >=30| Obesidad\n");
         
    return 0;
}
